@model MvcMovie.Models.Movie

@{
    bool editMode = ViewData["EditMode"] != null && (bool)ViewData["EditMode"];
    bool detailsMode = ViewData["DetailsMode"] != null && (bool)ViewData["DetailsMode"];
}

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" id="Id" value="@Model.Id" />
        <div class="form-group">
            <label class="control-label">Title</label>
            @if (editMode)
            {
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            }
            else
            {
                <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
            }
        </div>

        <div class="form-group">
            <label class="control-label">Release Date</label>
            @if (editMode)
            {
                <input asp-for="ReleaseDate" class="form-control" type="date" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            }
            else
            {
                <p class="form-control-static">@Html.DisplayFor(model => model.ReleaseDate)</p>
            }
        </div>

        <div class="form-group">
            <label class="control-label">Genre</label>
            @if (editMode)
            {
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            }
            else
            {
                <p class="form-control-static">@Html.DisplayFor(model => model.Genre)</p>
            }
        </div>

        <div class="form-group">
            <label class="control-label">Price</label>
            @if (editMode)
            {
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            }
            else
            {
                <p class="form-control-static">@Html.DisplayFor(model => model.Price)</p>
            }
        </div>

        <div class="form-group">
            <label class="control-label">Rating</label>
            @if (editMode)
            {
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            }
            else
            {
                <p class="form-control-static">@Html.DisplayFor(model => model.Rating)</p>
            }
        </div>
    </div>
</div>
